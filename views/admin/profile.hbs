{{>sidebar}}

<div id="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="basic">
                    <h3>{{title}}</h3>
                </div>
                <form action="/admin/profile/edit" method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" class="form-control" id="email" placeholder="Email" required value="{{administrator.email}}">
                    </div>
                    <div class="mb-3">
                        <label for="userName" class="form-label">Username</label>
                        <input type="text" name="userName" class="form-control" id="userName" placeholder="Username" required value="{{administrator.user_name}}">
                    </div>
                    <div class="mb-3">
                        <label for="firstName" class="form-label">First Name</label>
                        <input type="text" name="firstName" class="form-control" id="firstName" placeholder="First Name" required value="{{administrator.first_name}}">
                    </div>
                    <div class="mb-3">
                        <label for="lastName" class="form-label">Last Name</label>
                        <input type="text" name="lastName" class="form-control" id="lastName" placeholder="Last Name" required value="{{administrator.last_name}}">
                    </div>
                    <button type="submit" class="btn btn-primary">Edit</button>
                </form>
                
                <form action="/admin/profile/password/edit" method="post" style="padding-top: 3rem;">
                    {{#if administrator.password}}
                        <div class="mb-3">
                            <label for="oldPassword" class="form-label">Old password</label>
                            <input type="password" name="oldPassword" class="form-control" id="oldPassword" placeholder="Old password" required>
                        </div>
                    {{/if}}
                    <div class="mb-3">
                        <label for="newPassword" class="form-label">New password</label>
                        <input type="password" name="newPassword" class="form-control" id="newPassword" placeholder="New password" required>
                    </div>
                    <div class="mb-3">
                        <label for="newPasswordConfirm" class="form-label">New password confirm</label>
                        <input type="password" name="newPasswordConfirm" class="form-control" id="newPasswordConfirm" placeholder="New password confirm" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Edit</button>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="roles" style="padding-top: 2rem; padding-left: 2rem;">
    {{#if administratorRoles}}
        <h6>Roles</h6>
        {{#each administratorRoles}}
            <div class="form-check">
                <input name="role" class="form-check-input" type="checkbox" value="{{id}}" id="flexCheckDefault" checked disabled>
                <label class="form-check-label" for="flexCheckDefault">{{title}}</label>
            </div>
        {{/each}}
    {{/if}}
</div>
<br>
<div id="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-bordered border-primary">
                    <thead>
                        <tr>
                            <th scope="col">Entity</th>
                            <th scope="col">Read</th>
                            <th scope="col">Add</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider">
                        {{#each entitiesPermissions}}
                            <tr>
                                <th scope="row">{{entityName}}</th>
                                {{#each permissions}}
                                    {{#if role_id}}
                                        {{#if id}}
                                            <td>
                                                <div class="form-check">
                                                    <input name="permission" class="form-check-input-black" type="checkbox" value="{{id}}" id="flexCheckDefault" checked disabled>
                                                </div>
                                            </td>
                                        {{else}}
                                            <td>
                                                <div class="form-check">
                                                    <input name="permission" class="form-check-input-black" type="checkbox" value="{{id}}" id="flexCheckDefault" disabled>
                                                </div>
                                            </td>
                                        {{/if}}
                                    {{else}}
                                        {{#if id}}
                                            <td>
                                                <div class="form-check">
                                                    <input name="permission" class="form-check-input-black" type="checkbox" value="{{id}}" id="flexCheckDefault" disabled>
                                                </div>
                                            </td>
                                        {{else}}
                                            <td>
                                                <div class="form-check">
                                                    <input name="permission" class="form-check-input-black" type="checkbox" value="{{id}}" id="flexCheckDefault" disabled>
                                                </div>
                                            </td>
                                        {{/if}}
                                    {{/if}}
                                {{/each}}   
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
