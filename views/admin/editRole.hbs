{{>sidebar}}

<div id="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="basic">
                    <h3>{{title}}</h3>
                </div>
                <form action="/admin/roles/{{role.id}}/edit" method="post">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="title" class="form-control" id="title" placeholder="Title" required value="{{role.title}}">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="description" class="form-control" id="description" rows="5" placeholder="Description" required>{{role.description}}</textarea>
                    </div>
                    <br>
                    <table class="table table-bordered border-primary">
                        <thead>
                            <tr>
                                <th scope="col">Entity</th>
                                <th scope="col">Read</th>
                                <th scope="col">Add</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Delete</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            {{#each entitiesPermissions}}
                                <tr>
                                    <th scope="row">{{entityName}}</th>
                                    {{#each permissions}}
                                        {{#if role_id}}
                                            {{#if id}}
                                                <td>
                                                    <div class="form-check">
                                                        <input name="permission" class="form-check-input-black" type="checkbox" value="{{id}}" id="flexCheckDefault" checked>
                                                    </div>
                                                </td>
                                            {{else}}
                                                <td>
                                                    <div class="form-check">
                                                        <input name="permission" class="form-check-input-black" type="checkbox" value="{{id}}" id="flexCheckDefault" disabled>
                                                    </div>
                                                </td>
                                            {{/if}}
                                        {{else}}
                                            {{#if id}}
                                                <td>
                                                    <div class="form-check">
                                                        <input name="permission" class="form-check-input-black" type="checkbox" value="{{id}}" id="flexCheckDefault">
                                                    </div>
                                                </td>
                                            {{else}}
                                                <td>
                                                    <div class="form-check">
                                                        <input name="permission" class="form-check-input-black" type="checkbox" value="{{id}}" id="flexCheckDefault" disabled>
                                                    </div>
                                                </td>
                                            {{/if}}
                                        {{/if}}
                                    {{/each}}
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    <br>
                    <button type="submit" class="btn btn-primary">Apply</button>
                </form>
            </div>
        </div>
    </div>
</div>
